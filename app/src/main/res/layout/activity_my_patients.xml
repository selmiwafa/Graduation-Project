<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerlayout2"
    tools:openDrawer="start"
    android:fitsSystemWindows="true"
    tools:context=".manage_patients.AddPatientActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/top_gardient_card" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/toolbar"
            app:navigationIcon="@drawable/menu"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:src="@drawable/hbtext"
            android:contentDescription="@string/logo" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userImg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/user_image"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="12dp"
            android:elevation="0dp"
            android:clickable="true"
            android:onClick="createUserDialog"
            android:contentDescription="@string/user_image" />

        <RelativeLayout
            android:id="@+id/layoutcard1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/logo"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="30dp">

            <RelativeLayout
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@android:color/black"
                android:background="@drawable/patients_card_bg"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/pat1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patient 1"
                    android:paddingStart="50dp"
                    android:layout_marginTop="28dp"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rel1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="relationship"
                    android:paddingStart="50dp"
                    android:layout_below="@+id/pat1"
                    android:textSize="15sp"
                    android:textStyle="normal" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/patient1"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="40dp" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutcard2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/layoutcard1"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="30dp">

            <RelativeLayout
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@android:color/black"
                android:background="@drawable/patients_card_bg"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/pat2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patient 2"
                    android:paddingStart="50dp"
                    android:layout_marginTop="28dp"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="relationship"
                    android:paddingStart="50dp"
                    android:layout_below="@+id/pat2"
                    android:textSize="15sp"
                    android:textStyle="normal" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/patient2"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="40dp" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:text="Text"
            android:layout_below="@+id/layoutcard2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/circle_bg"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="40dp"
            android:src="@drawable/simple_plus"
            android:layout_marginBottom="90dp" />
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="300dp"
        android:layout_height="match_parent"
        app:menu="@menu/menu_elements"
        android:id="@+id/nav_menu"
        app:headerLayout="@layout/menu_header"
        android:layout_gravity="start" />
</androidx.drawerlayout.widget.DrawerLayout>