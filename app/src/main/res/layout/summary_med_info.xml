<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="600dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
    android:layout_marginTop="60dp">
    <TextView
        android:id="@+id/barcodeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Barcode: "
        android:textStyle="bold" />

    <TextView
        android:id="@+id/presBarcodeValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />
    <TextView
        android:id="@+id/medNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textStyle="bold" />

    <TextView
        android:id="@+id/presMedNameValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />



    <TextView
        android:id="@+id/doseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dose: "
        android:textStyle="bold" />

    <TextView
        android:id="@+id/doseValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />
    <TextView
        android:id="@+id/frequencyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frequency: (times/day)"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/frequencyValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/periodTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Period : (days)"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/periodValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/tpwTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Times per week: "
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tpwValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />
    <TextView
        android:id="@+id/otherTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other details: "
        android:textStyle="bold" />

    <TextView
        android:id="@+id/otherValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

</LinearLayout>
</RelativeLayout>